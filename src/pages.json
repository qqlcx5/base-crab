  "easycom": {
    "autoscan": true,
    "custom": {
      "^ca-(.*)$": "@/crabui/components/$1/$1.vue",
      // 基础组件（@/crabui/components/list/list.vue => ca-list）
      "^sub-([^-]+)-(.*)$": "@/$1/components/$2/$2.vue" // 分包下的组件（@/home/components/list/list.vue => sub-home-list)
    }
  },
